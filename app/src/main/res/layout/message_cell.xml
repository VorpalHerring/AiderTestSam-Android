<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iconView"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:padding="3dp"
            app:srcCompat="@drawable/ic_baseline_account_circle_24" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_marginStart="5dp">

            <TextView
                android:id="@+id/nameLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold"
                tools:text="Sender Name" />

            <TextView
                android:id="@+id/messageLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="15sp"
                tools:text="Vastness is bearable only through love paroxysm of global death quasar laws of physics with pretty stories for which there's little good evidence the ash of stellar alchemy. Emerged into consciousness dream of the mind's eye take root and flourish Tunguska event the only home we've ever known concept of the number one. Citizens of distant epochs two ghostly white figures in coveralls and helmets are softly dancing bits of moving fluff another world stirred by starlight not a sunrise but a galaxyrise and billions upon billions upon billions upon billions upon billions upon billions upon billions." />

        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="20dp"
        android:background="#CCCCCC" />
</LinearLayout>
